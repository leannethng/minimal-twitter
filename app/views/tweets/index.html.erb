<h1> Minimal Twitter </h1>

<% if session[:token].present? %>
<p>
  @<%= session[:username] %>
</p>

<%
=begin%>
<%= @tweets.to_json %>
<%
=end%>
<% @tweets.each do |tweet| %>
<div>

  <h2><%= auto_link(tweet.text).html_safe %></h2>
  <p><%= tweet.user.name %> <a href="<%= tweet.user.url %>">@<%= auto_link(tweet.user.screen_name).html_safe %></a> </p>



</div>
<% end %>
<% else %>
<p>
  <a href="/auth/twitter">Log in with Twitter</a>
</p>
<% end %>